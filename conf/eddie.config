process {
    executor = 'sge'
    queue = 'eddie'
    memory = '8GB'
    beforeScript = 'module load anaconda/5.0.1'

    withLabel: fastq {
        conda:'bioconda::fastqc fastq-screen trim-galore samtools bowtie2 picard'
    }
}

env {
    BOWTIE2_INDEXES="/exports/igmm/eddie/ponting-lab/oyvind/bowtie/indexes"
}
