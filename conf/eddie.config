process {
    clusterOptions = '-l h_vmem=8G'
    executor = 'sge'
    queue = 'eddie'
    beforeScript = """
    . /etc/profile.d/modules.sh
    module load anaconda/5.0.1
    """

    withLabel: fastq {
        conda='fastqc fastq-screen trim-galore samtools bowtie2 picard'
    }

    withLabel: bigmem {
	   clusterOptions = '-l h_vmem=16G'
    }
}

env {
    BOWTIE2_INDEXES="/exports/igmm/eddie/ponting-lab/oyvind/bowtie/indexes"
}
