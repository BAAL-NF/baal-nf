process {
    clusterOptions = '-l h_vmem=8G'
    executor = 'sge'
    queue = 'eddie'
    beforeScript = 'module load anaconda/5.0.1'

    withLabel: fastq {
        conda='fastqc fastq-screen trim-galore samtools bowtie2 picard'
    }

    withLabel: bigmem {
	   clusterOptions = '-l h_vmem=16G'
    }
}

env {
    BOWTIE2_INDEXES="/exports/igmm/eddie/ponting-lab/oyvind/bowtie/indexes"
}

params {
    fastq_screen_conf = '/exports/igmm/eddie/ponting-lab/oyvind/fastq_screen/fastq_screen.conf'
}
