process {
    withLabel: 'fastq|python' {
        container = 'oalmelid/baal-nf-env:1.0.0'
    }

    withLabel: baal_chip {
        container = 'oalmelid/baal-chip-env:1.0.0'
    }
}

docker {
    enabled = true
    pullTimeout = '1h'
    envWhitelist = 'SINGULARITY_TMPDIR,TMPDIR'
    fixOwnership = true
}
